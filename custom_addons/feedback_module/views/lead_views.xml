<odoo>
    <!-- Lead List View -->
    <record id="view_real_estate_lead_list" model="ir.ui.view">
        <field name="name">real.estate.lead.list</field>
        <field name="model">real.estate.lead</field>
        <field name="arch" type="xml">
            <list string="Leads">
                <field name="name"/>
                <field name="email"/>
                <field name="phone"/>
            </list>
        </field>
    </record>

    <!-- Lead Form View -->
    <record id="view_real_estate_lead_form" model="ir.ui.view">
        <field name="name">real.estate.lead.form</field>
        <field name="model">real.estate.lead</field>
        <field name="arch" type="xml">
            <form string="Lead">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="email"/>
                        <field name="phone"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>

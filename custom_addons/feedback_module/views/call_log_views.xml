<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Form View for Call Log -->
    <record id="view_feedback_call_log_form" model="ir.ui.view">
        <field name="name">feedback.call.log.form</field>
        <field name="model">feedback.call.log</field>
        <field name="arch" type="xml">
            <form string="Call Log">
                <header>
                    <button name="action_open_questionnaire" 
                            string="Open Questionnaire" 
                            type="object" 
                            class="btn-primary"
                            help="Open the client questionnaire after uploading the call recording"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="lead_id" readonly="context.get('default_lead_id', False)"/>
                            <field name="feedback_id" readonly="context.get('default_feedback_id', False)"/>
                            <field name="call_time"/>
                        </group>
                        <group>
                            <field name="salesperson_id" readonly="context.get('default_salesperson_id', False)"/>
                        </group>
                    </group>
                    <group string="Call Details">
                        <field name="call_description" nolabel="1" placeholder="Describe the call..."/>
                    </group>
                    <group string="Call Recording">
                        <field name="call_recording" widget="binary" filename="recording_filename"/>
                        <field name="recording_filename" invisible="1"/>
                    </group>
                </sheet>
                <footer>
                    <button string="Save" class="btn-primary" special="save"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- List View for Call Log -->
    <record id="view_feedback_call_log_list" model="ir.ui.view">
        <field name="name">feedback.call.log.list</field>
        <field name="model">feedback.call.log</field>
        <field name="arch" type="xml">
            <list string="Call Logs">
                <field name="lead_id"/>
                <field name="feedback_id"/>
                <field name="call_time"/>
                <field name="salesperson_id"/>
                <field name="call_description"/>
            </list>
        </field>
    </record>

    <!-- Action Window for Call Logs -->
    <record id="action_feedback_call_log" model="ir.actions.act_window">
        <field name="name">Call Logs</field>
        <field name="res_model">feedback.call.log</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- Menu Item for Call Logs -->
    <menuitem id="menu_feedback_call_log"
              name="Call Logs"
              parent="menu_users_root"
              action="action_feedback_call_log"
              sequence="30"/>
              
    <!-- Add button to CRM Lead form view -->
    <record id="crm_lead_view_form_inherit_call_log" model="ir.ui.view">
        <field name="name">crm.lead.view.form.inherit.call.log</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.crm_lead_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//header" position="inside">
                <button name="action_log_call" 
                        string="Add Call Log" 
                        type="object" 
                        class="btn-primary"
                        icon="fa-phone"/>
            </xpath>
        </field>
    </record>
</odoo> 